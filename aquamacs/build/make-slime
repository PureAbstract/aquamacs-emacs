#!/bin/sh

# Build the SLIME installer package

cd /tmp
rm -rf slime
cvs -d :pserver:anonymous:anonymous@common-lisp.net:/project/slime/cvsroot co slime

cd slime/doc
make  

# Make info file accessible for Aquamacs
cd slime
mkdir info
cd info
ln -s ../doc/slime.info .

cd /tmp
/Developer/usr/bin/packagemaker --root SLIME --install-to ~/Library/Application\ Support/Aquamacs\ Emacs/SLIME --id org.aquamacs.slime-plugin --version `date +%Y-%m-%d` --title "SLIME plugin for Aquamacs" --out Aquamacs-SLIME-`date +%Y-%m-%d`.pkg -v

