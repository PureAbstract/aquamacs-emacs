#!/bin/sh

# installs files into Emacs.app to make it Aquamacs

# this takes two arguments   

# project-dir (Aquamacs CVS)
# destination .app bundle, e.g. /Applications/Emacs.app

# you can also give -n as first argument if you do not want to compile the .el scripts.


if [ "$1" == "-n" ]; then
    # do NOT compile the scripts
     
    dest=$3
    projdir=$2
else 
    compile=1
    dest=$2
    projdir=$1

fi


if [ ! $dest ]; then

    dest=/Applications/Emacs.app

fi

if [ ! $projdir ]; then

    projdir=$HOME/Projects/Aquamacs/aquamacs

fi


em=$dest/Contents/MacOS/Emacs
 
rm -r /tmp/backup.site-lisp
mv  $dest/Contents/Resources/site-lisp /tmp/backup.site-lisp

mkdir $dest/Contents/Resources/site-lisp 2>/dev/null
mkdir $dest/Contents/Resources/site-lisp/oneonone 2>/dev/null
mkdir $dest/Contents/Resources/site-lisp/macosx 2>/dev/null
mkdir $dest/Contents/Resources/site-lisp/edit-modes 2>/dev/null

rm -r $dest/Contents/Resources/Aquamacs\ Help
cp -r $projdir/doc/AquamacsHelp $dest/Contents/Resources/Aquamacs\ Help
cp -r $projdir/doc/EmacsManual $dest/Contents/Resources/Emacs\ Manual
cp -r $projdir/src/Emacs.icns $dest/Contents/Resources/Emacs.icns

cp -r $projdir/src/etc/aquamacs-splash-screen.jpg $dest/Contents/Resources/etc/

cp -r $projdir/src/Info.plist $dest/Contents/

cp -Rvp $projdir/src/site-lisp/*.el $dest/Contents/Resources/site-lisp/

cp -Rvp $projdir/src/site-lisp/edit-modes/*.el $dest/Contents/Resources/site-lisp/edit-modes/

cp -Rvp $projdir/src/site-lisp/macosx/*.el $dest/Contents/Resources/site-lisp/macosx/
cp -Rvp $projdir/src/site-lisp/oneonone/*.el $dest/Contents/Resources/site-lisp/oneonone/

if [ $compile ]; then
    $em -batch -f batch-byte-compile $dest/Contents/Resources/site-lisp/*.el
    $em -batch -f batch-byte-compile $dest/Contents/Resources/site-lisp/macosx/*.el 
    $em -batch -f batch-byte-compile $dest/Contents/Resources/site-lisp/oneonone/*.el
  

# .el is too large
    gzip $dest/Contents/Resources/site-lisp/color-theme.el
fi


# replace hardlinks

rm $dest/Contents/MacOS/bin/emacs
rm $dest/Contents/MacOS/bin/emacs-22.0.50
cd $dest/Contents/MacOS/bin/ ; ln -s ../Emacs emacs ; ln -s ../Emacs emacs-22.0.50
